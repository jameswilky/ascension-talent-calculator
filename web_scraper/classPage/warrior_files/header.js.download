$(document).ready(function () {
    $(document).on('click', '.carousel-button', function (e) {
        try {
            var $el = $(this);
            var valueToIncreaseBy = $el.hasClass('next') ? 1 : -1;
            var $currentCarouselItem = $('div.header-news').find('div.text:visible');
            var currentIndex = $currentCarouselItem.attr('data-action');
            currentIndex = parseInt(currentIndex, 10);
            var indexToShow = 0;
            if (currentIndex + valueToIncreaseBy >= 0) {
                indexToShow = currentIndex + valueToIncreaseBy <= 2 ? currentIndex + valueToIncreaseBy : 0;
            } else {
                indexToShow = currentIndex + valueToIncreaseBy < 0 ? 2 : currentIndex + valueToIncreaseBy;
            }
            var selector = 'div.text[data-action="' + indexToShow + '"]';
            var $itemToFadeIn = $('div.header-news').find(selector);
            $currentCarouselItem.hide();
            $itemToFadeIn.fadeIn();
        } catch(err) {
            console.log(err.message);
        }
    });
    $(document).on('click', '.mobile-nav li', function (e) {
        $('button.navbar-toggle').trigger('click');
    });
    $(document).on('click', 'button.navbar-toggle', function (e) {
        var $el = $(this);
        var $header = $el.parent();
        if ($header.hasClass('open')) {
            $header.removeClass('open');
        } else {
            $header.addClass('open');
        }
        var $logo = $header.find('div.nav-logo');
        if ($logo.hasClass('open')) {
            $logo.removeClass('open');
        } else {
            $logo.addClass('open');
        }
    });
});
